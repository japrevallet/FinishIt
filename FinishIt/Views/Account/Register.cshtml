@model RegisterViewModel
@{
    ViewBag.Title = "Register";
}
@section Scripts {
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

    <form asp-controller="Account" asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <label asp-for="UserName">UserName: </label>
        <input type="text" asp-for="UserName" /> <br />
        <label asp-for="Email">Email: </label>
        <input type="email" asp-for="Email" /> <br />
        <label asp-for="Password">Password: </label>
        <input type="password" asp-for="Password" /> <br />
        <label asp-for="ConfirmPassword">Confirm Password: </label>
        <input type="password" asp-for="ConfirmPassword" /> <br />
        <input type="submit" value="Register" />
    </form>