@model FinishIt.ViewModel.ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
}

<h2>ResetPassword</h2>


<form asp-controller="Account" asp-action="LogIn" method="post">
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="Token" />
    Password: <input type="password" asp-for="ConfirmPassword" /> <br />
    ConfirmPassword: <input type="password" asp-for="Password" /> <br />
    <input type="submit" value="ResetPassword" />
</form>

@ViewBag.Msg